<div class="card mb-4">
    {% if property.filename %}
      <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="image" style="width: 100%; height: auto;" />
    {% else %}
      <img src="{{ '/images/properties/default.jpg' | imagine_filter('thumb') }}" alt="default image" style="width: 100%; height: auto;" />
    {% endif %}
  <div class="card-body">
    <h5 class="card-title">
      <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">{{ property.title }}</a>
    </h5>
    <p class="cart-text">
      {{ property.description | nl2br }}
    </p>
    <p class="cart-text">
      {{ property.surface }}m² - {{ property.city }} {{ property.postalCode }}
    </p>
    <div class="text-primary" style="font-size: 2rem; font-weight: bold;">
      {{ property.formattedPrice }} €
    </div>
  </div>
</div>
